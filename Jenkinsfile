pipeline
{
    agent any
    stages{
        stage('Initialise')
        {
            steps{
                echo "initialise the first pipeline project"
                echo "initialisation starting"
            }
        }
        stage('Build')
        {
            steps{
                echo "build an maven application"
            }
        }
        stage("Deploy")
        {
            steps{
                echo "deployment stage"
            }
        }    
    }
}
